{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist",

    "isolatedModules": true,
    "esModuleInterop": true, 

    "types": [ "node" ]
  },
  "include": [ "src/" ],
}